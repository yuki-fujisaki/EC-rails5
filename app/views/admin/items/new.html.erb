<%= form_with model: @item, url: "/admin/items", local:true do |f| %>
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
    <%= f.label :商品説明 %>
    <%= f.text_field :description %>
    <%= f.label :値段 %>
    <%= f.text_field :tax_excluded_price %>
    <div>
      <%= f.label :販売ステータス %>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
    <%= f.attachment_field :image %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>

  <%= f.submit %>
<% end %>

